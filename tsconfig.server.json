{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./server",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "baseUrl": "./server",
    "paths": {
      "@/*": ["*"],
      "@/config/*": ["config/*"],
      "@/routes/*": ["routes/*"],
      "@/middleware/*": ["middleware/*"],
      "@/utils/*": ["utils/*"],
      "@/types/*": ["types/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"]
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "dist", "src", ".next", "foundry"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2020",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
    }
  }
}
