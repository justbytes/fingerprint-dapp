{
  "watch": ["server"],
  "ext": "ts,json",
  "ignore": [
    "server/**/*.test.ts",
    "server/**/*.spec.ts",
    "dist/**/*",
    "node_modules/**/*",
    "src/**/*",
    ".next/**/*"
  ],
  "exec": "ts-node --project tsconfig.server.json server/server.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 1000,
  "colours": true,
  "legacyWatch": false,
  "verbose": true
}
